<?xml version="1.0"?>
<!-- roslaunch urdf_tutorial display.launch model:='$(find mm_description)/urdf/my_robot.urdf' -->
<robot name="robotic_arm">
    <link name="world"/>
    <!-- BASE LINK-->    
    <link name="base_link">
        <inertial>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
            <mass value="1"/>
            <inertia ixx="027" ixy="0.0" ixz="0.0" iyy="0.0027" iyz="0.0" izz="0.005"/>
        </inertial>

        <visual>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.3" length="0.05"/>
            </geometry>
            <material name="Black"/>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.025" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.3" length="0.05"/>
            </geometry>
        </collision>
    </link>

    <joint name="fixed_base" type="fixed">
        <parent link="world"/>
        <child link="base_link"/>
    </joint>

    <!-- LINK 1-->    
    <link name="One">
        <inertial>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <mass value="1"/>
            <inertia ixx="0.02176" ixy="0.0" ixz="0.0" iyy="0.00125" iyz="0.0" izz="0.005"/>
        </inertial>

        <visual>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
            <material name="Silver">
                <color rgba="0.75 0.75 0.75 1.0"/>
            </material>
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.25" rpy="0.0 0.0 0.0"/>
            <geometry>
                <cylinder radius="0.05" length="0.5"/>
            </geometry>
        </collision>
    </link>

    <joint name="One_joint" type="continuous">
        <parent link="base_link"/>
        <child link="One"/>
        <axis xyz="0.0 0.0 1"/>
        <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.05"/>
    </joint>




</robot>